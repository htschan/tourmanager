# Firestorm.ch Email Configuration Example
# Copy these settings to your .env file and adjust as needed

# Email server settings for Firestorm.ch
MAIL_SERVER=sr101.firestorm.ch
MAIL_PORT=587
MAIL_USERNAME=your-email@yourdomain.ch
MAIL_PASSWORD=your-password
MAIL_FROM=your-email@yourdomain.ch
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
USE_CREDENTIALS=True

# For debugging purposes
# Set to True to see detailed email logs
EMAIL_DEBUG=True

# Frontend URL for email links
FRONTEND_URL=http://localhost:3001
